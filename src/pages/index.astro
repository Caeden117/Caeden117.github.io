---
import DrawnImage from '@components/DrawnImage.astro';
import LinksArea from '@components/LinksArea.astro';
import "@styles/global.css";

import { Image } from 'astro:assets';
import avatar from '@/images/icon.png';

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<div class="mx-auto flex h-screen w-full max-w-128 flex-row items-center justify-center">
			<div class="flex items-center gap-6 pt-8 pb-8">
				<Image class="size-64 rounded-full width-600px height-600px" alt="Harpy avatar :>" src={avatar} />
			</div>
			<div class="flex flex-col items-start gap-4">
				<h1 class="text-4xl font-bold">Caeden Statia</h1>
				<LinksArea
					twitter="https://twitter.com/The_Caeden117"
					bluesky="https://bsky.app/profile/caeden.dev"
					github="https://github.com/Caeden117"
				/>
			</div>
			
		</div>
	</body>
</html>

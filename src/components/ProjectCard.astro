---
import { Image } from 'astro:assets';
import LinksArea from '@/components/LinksArea.astro';
import avatar from '@/images/icon.png';
import FindProjectIcon from '@/scripts/FindProjectIcon';
import { Icon } from 'astro-icon/components';

const { frontmatter, url } = Astro.props;

const { title, subtitle, favorite, twitter, bluesky, linkedin, github, steam, itchdotio, download, other } = frontmatter;

const icon = FindProjectIcon(title, avatar);
---

<div class="p-8 rounded-4xl flex flex-row gap-6 items-center justify-start w-[500px] lg:w-[1000px] relative">
    <a href={url} rel="noopener noreferrer">
        <Image transition:name={`icon-${title}`} class="size-32 rounded-2xl max-w-600px max-h-600px aspect-square transition-all" loading="lazy" alt={`${title} icon`} src={icon} />
    </a>
    <div class="flex flex-col items-start gap-2">
        <a href={url} rel="noopener noreferrer">
            <h1 class="text-4xl font-bold text-shadow-harpy">{title}</h1>
        </a>
        <a href={url} rel="noopener noreferrer">
            <p class="text-xl">{subtitle}</p>
        </a>
        <LinksArea
            twitter={twitter}
            bluesky={bluesky}
            linkedin={linkedin}
            github={github}
            steam={steam}
            itchdotio={itchdotio}
            download={download}
            other={other}
        />

        { favorite &&
        <div class="absolute top-8 right-8">
            <Icon name="mdi:star" class="size-8 text-yellow-400 drop-shadow-md" title="Recommended Project"/>
        </div>
        }
    </div>
</div>
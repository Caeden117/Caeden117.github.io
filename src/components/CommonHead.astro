---
import "@styles/global.css";
import { ClientRouter } from 'astro:transitions';

const { title, description } = Astro.props;
---
<!--Obtain a default dark mode value and apply that to the document before its rendered-->
<script>
    if (!localStorage.theme) {
        localStorage.theme = window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
    }
    document.documentElement.classList.toggle("dark", localStorage.theme === "dark");
</script>

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<link rel="icon" type="image/png" href="/avatar-small.png" />
<meta name="generator" content={Astro.generator} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!--Discord Embed Information-->
<meta property="og:type" content="website">
<meta property="og:title" content={ `${title} | caeden.dev` } />
<meta property="og:description" content={description} />
<meta property="og:url" content="https://caeden.dev/" />
<meta property="og:image" content="https://caeden.dev/avatar-small.png" />

<ClientRouter />
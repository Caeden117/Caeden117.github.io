---
import { ClientRouter } from 'astro:transitions';

const { title, description } = Astro.props;
---
<link rel="icon" type="image/png" href="/avatar-small.png" />
<meta name="generator" content={Astro.generator} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!--Discord Embed Information-->
<meta property="og:type" content="website">
<meta property="og:title" content={ `${title} | caeden.dev` } />
<meta property="og:description" content={description} />
<meta property="og:url" content="https://caeden.dev/" />
<meta property="og:image" content="https://caeden.dev/avatar-small.png" />

<ClientRouter />